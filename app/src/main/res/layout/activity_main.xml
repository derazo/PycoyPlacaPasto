<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.frank.myapplication.MainActivity"
    android:orientation="vertical"
    android:weightSum="1">


    <ImageView
        app:srcCompat="@drawable/descarga"
        android:layout_x="116dp"
        android:layout_y="49dp"
        android:id="@+id/imageView"
        android:layout_height="140dp"
        android:layout_width="160dp"
        android:background="@android:color/transparent" />

    <TextView
        android:id="@+id/tv1"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:background="@android:color/transparent"
        android:text=" #-# "
        android:textAlignment="center"
        android:textColor="@android:color/background_dark"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="160dp"
        android:layout_above="@+id/textView5"
        android:layout_toRightOf="@+id/tv_placa"
        android:layout_toEndOf="@+id/tv_placa"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_x="116dp"
        android:layout_y="115dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.03"
        android:text="Mi placa: "
        android:textSize="24sp"
        android:textColor="@android:color/black"
        android:layout_above="@+id/tv_placa"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="17dp"
        android:layout_x="13dp"
        android:layout_y="245dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv_placa"
        android:layout_marginTop="11dp"
        android:layout_weight="0.03"
        android:layout_x="11dp"
        android:layout_y="323dp"
        android:text="Tu Próximo día de Pico y Placa"
        android:textColor="@android:color/black"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/tv_proximo_dia"
        android:layout_width="358dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.03"
        android:text="TextView"
        android:layout_below="@+id/textView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="13dp"
        android:layout_x="11dp"
        android:layout_y="358dp"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp" />

    <Button
        android:id="@+id/button"
        android:layout_width="171dp"
        android:layout_height="wrap_content"
        android:onClick="configuracion"
        android:text="Elegir Placa"
        android:layout_below="@+id/textView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="54dp"
        android:layout_x="8dp"
        android:layout_y="397dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="341dp"
        android:layout_height="wrap_content"
        android:text="Pico y Placa Pasto"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_weight="0.03"
        android:textColor="@android:color/holo_orange_dark"
        android:layout_x="17dp"
        android:layout_y="7dp" />

    <TextView
        android:id="@+id/tv_placa"
        android:layout_width="108dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_x="10dp"
        android:layout_y="275dp"
        android:background="@color/colorPrimary"
        android:text="  "
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="36sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_picoyplaca"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv_placa"
        android:layout_weight="0.03"
        android:layout_x="61dp"
        android:layout_y="197dp"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="24sp" />


</AbsoluteLayout>
